@require '../material/mixins'

privacy-popup
  .content
    display: block
    position: fixed
    width: 100vw
    bottom: -1000px
    opacity: 0
    transition: all ($transitionTime * .5) ease-in-out
    padding: $spacing * 2 $spacing * 4
    background-color: $backgroundColor1

    .cookies-content
      display: flex
      align-items: center
      max-width: $pageWidth
      margin: 0 auto

      .cookies-message
        margin-right: $spacing * 4

        .cookies-title
          margin-bottom: $spacing * 2

        .cookies-description
          font-weight: 100

    &.unaccepted
      bottom: 0px
      opacity: 1


